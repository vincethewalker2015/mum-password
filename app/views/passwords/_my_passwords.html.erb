<div class='search-area mt-4'></div>
<h3 class="search-text">Search Password</h3>
  <%= form_tag search_password_path, remote: true, method: :get do %>
    <div class="form-group row">
      <div class="col-sm-9 no-right-padding">
        <%= text_field_tag :password, params[:password], placeholder: "Search for name or description", autofocus: true, class: "form-control form-control-lg" %>
      </div>
      <div class="col-sm-3 no-left-padding">
        <%= button_tag "Search", type: :submit, class: "btn btn-warning" do %>
        <i class="fa fa-search "></i>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
<div id="password-results"> 
</div>